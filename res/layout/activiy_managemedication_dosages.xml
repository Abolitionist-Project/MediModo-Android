<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card">

    <com.quantimodo.medication.widgets.TextViewRobotoLight
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="18dp"
        android:text="@string/managemedication_inventory"
        android:textSize="24sp"
        android:textColor="@color/card_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="12dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:inputType="numberSigned"/>
        <com.actionbarsherlock.internal.widget.IcsSpinner
            android:id="@+id/spDosage"
            android:layout_width="wrap_content"
            android:layout_height="48dp"/>
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_action_cancel_dark"
            android:background="@drawable/selector"/>

    </LinearLayout>

    <com.quantimodo.medication.widgets.TextViewRoboto
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="12dp"
        android:text="@string/managemedication_inventory_add"
        android:textSize="18sp"
        android:textColor="@color/text_card"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/card_bottom" />
</LinearLayout>