<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <EditText
        android:id="@+id/etQuantity"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginRight="4dp"
        android:hint="@string/managemedication_dosages_quantity"
        android:nextFocusDown="@+id/etDosageStrength"
        android:inputType="numberSigned"/>
    <EditText
        android:id="@+id/etDosageStrength"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:hint="@string/managemedication_dosages_strength"
        android:imeOptions="actionDone"
        android:inputType="numberSigned"/>
    <com.actionbarsherlock.internal.widget.IcsSpinner
        android:id="@+id/spDosageUnit"
        android:layout_width="wrap_content"
        android:layout_height="48dp"/>
    <ImageButton
        android:id="@+id/btRemoveDose"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_action_cancel_dark"
        android:background="@drawable/selector"/>

</LinearLayout>