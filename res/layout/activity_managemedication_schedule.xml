<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card">

    <com.quantimodo.medication.widgets.TextViewRobotoLight
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="18dp"
        android:text="@string/managemedication_schedule"
        android:textSize="24sp"
        android:textColor="@color/card_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingLeft="8dp"
        android:paddingBottom="4dp">

    </LinearLayout>

    <com.quantimodo.medication.widgets.TextViewRoboto
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="12dp"
        android:text="@string/managemedication_schedule_add"
        android:textSize="18sp"
        android:textColor="@color/text_card"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/card_bottom" />
</LinearLayout>